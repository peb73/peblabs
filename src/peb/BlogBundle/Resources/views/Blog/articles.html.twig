{% extends 'pebBlogBundle:Blog:layout.html.twig' %}

{% block sidebar %}
    <div class="header">

        <hgroup>
            <h1 class="brand-title">PEBLabs Blog</h1>
            <h2 class="brand-tagline">Just a geek inside</h2>
        </hgroup>

        <nav class="nav">
            <ul class="nav-list">
                {% for category in categories %}
                    {{ include('pebBlogBundle:Blog:category.html.twig', {'category': category}) }}
                {% endfor %}
            </ul>
        </nav>
    </div>
{% endblock %}

{% block content %}
    <div class="posts">
        <!-- <h1 class="content-subhead">Recent Posts</h1> -->

        {% for article in articles %}
            {{ include('pebBlogBundle:Blog:article.html.twig', {'article': article}) }}
        {% endfor %}

    </div>

{% endblock %}